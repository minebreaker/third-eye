{
    "compilerOptions": {
        "moduleResolution": "node",
        "declaration": false,
        "inlineSourceMap": true,
        "outDir": "build/sources",
        "newLine": "LF",
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ]
}
